<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
	android:padding="15dip"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Thanks for Using The CallDriver App for Drivers ! "
    />
    
    <TextView  
	android:padding="15dip"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="The App will automatically send Location Updates to the Server. Make sure, your GPS is turned on. "
    />
    
    <TextView  
	android:padding="15dip"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="You can also mark your status as Busy or Free Using the buttons below."
    />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dip"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    >


<Button android:text="Busy" android:id="@+id/Button01" android:layout_width="120dip" android:layout_height="wrap_content"></Button>
<Button android:text="Free" android:id="@+id/Button02" android:layout_width="120dip" android:layout_height="wrap_content"></Button>




</LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dip"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    >
  
    <Button android:paddingTop="10dip" android:text="Update Number" android:id="@+id/Button03" android:layout_width="140dip" android:layout_height="wrap_content"></Button>
    <Button android:paddingTop="10dip" android:text="Register" android:id="@+id/Button04" android:layout_width="140dip" android:layout_height="wrap_content"></Button>
    
    
</LinearLayout>
</LinearLayout>
